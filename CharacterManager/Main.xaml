<Page x:Class="CharacterManager.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CharacterManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid>
        <Border CornerRadius="10" Background="White" Padding="20" Margin="30" 
                BorderBrush="#DDD" BorderThickness="1" >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

                <TextBlock Text="Character Manager" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#333" 
                           HorizontalAlignment="Center" 
                           Margin="0 0 0 30"/>

                <Button Content="Karakterek megtekintése"
                        Margin="0 0 0 15"
                        Height="40"
                        Click="ViewCharacters_Click"/>

                <Button Content="Új karakter létrehozása"
                        Margin="0 0 0 15"
                        Height="40"
                        Click="NewCharacter_Click"/>

                <Button Content="Harc indítása"
                        Margin="0 0 0 15"
                        Height="40"
                        Background="#3498db"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="StartFight_Click"/>

                <Button Content="Kilépés"
                        Height="40"
                        Click="Exit_Click"
                        Background="#e74c3c"
                        Foreground="White"
                        FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
